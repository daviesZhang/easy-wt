# Run the container with `docker run -p 3000:3000 -t easy-wt-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app
RUN apk update && apk upgrade && apk add gcc musl-dev g++ make python3
RUN addgroup --system easy-wt-server && \
          adduser --system -G easy-wt-server easy-wt-server

COPY dist/packages/easy-wt-server easy-wt-server
COPY packages/easy-wt-server/package.json easy-wt-server/package.json
RUN chown -R easy-wt-server:easy-wt-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm config set registry https://registry.npm.taobao.org

RUN npm --prefix easy-wt-server --omit=dev -f install

CMD [ "node", "easy-wt-server" ]
